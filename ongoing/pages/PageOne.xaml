<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ongoing.pages.PageOne">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Welcome! Please log in!" />
            <Button Text="New user" Clicked="New_User_Button_Clicked"></Button>
            <Button Text="Next page" Clicked="Next_Page_Clicked"></Button>
            <Button Text="Pop back" Clicked="Pop_Button_Clicked"></Button>
            
            <Editor x:Name="textbox"  Placeholder="Enter name" />
            <Button Text="submit" Clicked="Text_Submitted"></Button>
            <Label x:Name="display_text" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>